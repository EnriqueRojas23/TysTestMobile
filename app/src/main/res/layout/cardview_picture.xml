<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/pictureCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    cardview:cardCornerRadius="4dp">

    <FrameLayout
        android:id="@+id/framecolor"
        android:layout_width="match_parent"
        android:background="#689F38"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:alpha="0.4"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >
        <TextView
            android:id="@+id/OrdenTrabajoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100-0056545"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="30sp"
            android:textStyle="bold" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
           >

            <TextView
                android:id="@+id/OrigenCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Lima"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    >

                    <ImageView
                        android:id="@+id/imageCard"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:background="@drawable/waggon_truck"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"

                        ></ImageView>

                </RelativeLayout>

            <TextView
                android:id="@+id/DestinoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Piura"
                android:textColor="@android:color/white"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="140dp">


            <TextView
                android:id="@+id/ClienteCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="INRETAIL PHARMA S.A."
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FechaCreacionCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="06/09/2018"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/EstadoCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Pend Entrega"
                    android:textColor="@color/colorPrimaryLight"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="25sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
    <View style="@style/dividerHorizontal"/>


</android.support.v7.widget.CardView>